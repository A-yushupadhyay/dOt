<% layout('layout/boilerplate.ejs') %>

<div class="min-h-screen bg-gradient-to-b from-blue-100 to-blue-200 p-10">
  <h1 class="text-3xl font-bold text-blue-600 text-center mb-8">Our Doctors</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
    <% doctors.forEach(doctor => { %>
      <div class="bg-white rounded-2xl shadow-lg p-6 text-center">
        <% if (doctor.image) { %>
          <img src="/uploads/<%= doctor.image %>" alt="Doctor Image" class="w-32 h-32 object-cover mx-auto rounded-full mb-4 border-4 border-blue-200" />
        <% } else { %>
          <div class="w-32 h-32 mx-auto rounded-full bg-blue-100 flex items-center justify-center text-blue-500 text-4xl mb-4">üë®‚Äç‚öïÔ∏è</div>
        <% } %>
        <h2 class="text-xl font-semibold text-gray-700"><%= doctor.name %></h2>
        <p class="text-gray-500"><%= doctor.specialization || 'Specialist' %></p>
        <a href="/doctors/<%= doctor._id %>" class="text-blue-500 hover:underline mt-2 inline-block">View Profile</a>
      </div>
    <% }) %>
  </div>
</div>
